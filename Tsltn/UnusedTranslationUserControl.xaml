<UserControl x:Class="Tsltn.UnusedTranslationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tsltn"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Padding="10"
            DataContext="{Binding RelativeSource={RelativeSource Self}}"
             FontSize="16"
              TextOptions.TextFormattingMode="Ideal">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox Name="_cbSelected" HorizontalAlignment="Center" VerticalAlignment="Top" IsChecked="{Binding Remove, Mode=TwoWay}" FontSize="16" Margin="0,4,0,0"/>
        <TextBlock Grid.Column="1" TextAlignment="Justify" Text="{Binding Kvp.Value}" TextWrapping="WrapWithOverflow" Margin="0" Padding="0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
